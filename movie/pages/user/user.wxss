/* pages/user/index.wxss */
page{
  background-color: #eee;
}

.user-info{
  background-color:#fff;
  padding:40rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}
.avatar{
  border-radius: 50%;
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
  box-shadow: 1px 1px 5px #666;
}
.name{
  font-size: 30rpx;
  text-align: center;
}


.share,.history{
  padding:40rpx 30rpx;
  background-color: #fff;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.share:active,.history:active{
  background-color:#ccc;
}
.more{
  display: block;
  width: 50rpx;
  height: 50rpx;
}

.history-list{
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  padding:20rpx;
  background-color: #fff;
}
.movie-item{
  width:48%;
  float:left;
  margin: 1%;
}
.movie-item .poster{
  width: 100%;
}
.movie-item .text{
  font-size: 28rpx;
  text-align: center;
  margin: 5rpx 0;
  color:#333;
}
.movie-item .text .rate{
  color:#f00;
}
.movie-item .info{
  font-size: 22rpx;
  text-align: center;
  color:#888;
}
