page{
  width:100%;
  height: 100%;
}

.list-item{
  width: 100%;
  overflow: hidden;
  box-sizing: border-box;
  padding:20rpx;
}
.movie-item{
  width:48%;
  float:left;
  margin: 1%;
}
.movie-item .poster{
  width: 100%;
}
.movie-item .text{
  font-size: 28rpx;
  text-align: center;
  margin: 5rpx 0;
  color:#333;
}
.movie-item .text .rate{
  color:#f00;
}
.movie-item .info{
  font-size: 22rpx;
  text-align: center;
  color:#888;
}

.loading{
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  padding:20rpx;
}
.loading image{
  width: 100%;
  height: 80rpx;
}
